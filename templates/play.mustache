<style>
  body {
    margin: 0px;
    overflow: hidden;
  }
  #mod_quizgame_game {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
  }
</style>
<input id="soundoption" type="checkbox"></input><label for="soundoption">Enable sound</label><br/>
<input id="vroption" type="checkbox" checked></input><label for="vroption">Enable cardboard VR</label><br/>
<button class="btn btn-default" id="begin">Launch</button>
<div id="mod_quizgame_game" style="display: none"></div>

<script src="node_modules/three/build/three.min.js"></script>
<script src="node_modules/three/examples/js/effects/StereoEffect.js"></script>
<script src="node_modules/three/examples/js/controls/DeviceOrientationControls.js"></script>
<script src="node_modules/three/examples/js/controls/OrbitControls.js"></script>
<script src="node_modules/three/examples/js/loaders/ColladaLoader.js"></script>
{{#js}}
require(['jquery', 'mod_quizgame/quizgame'], function ($, quizgame) {
    $('#begin').on('click', function() {
        $('#mod_quizgame_game').css({'display': 'inline-block'});
        var sound = document.getElementById("soundoption").checked;
        var vr = document.getElementById("vroption").checked;
        quizgame.startGame(sound, vr);
    });
});
{{/js}}
